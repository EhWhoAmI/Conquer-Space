<?xml version="1.0" encoding="UTF-8"?>
<!--
This log configuration file is for release
It lacks all the cumulative logs that the debug one has, so it saves disk space
-->
<Configuration status="WARN">
    <Appenders>
        <File name="log" fileName="logs/all.html" append="false">    
            <HTMLLayout/>
        </File> 
        <File name="error" fileName="logs/error.html" append="false">    
            <HTMLLayout/>
        </File>
        <!--For in game gui-->
        <SwingAppender name="swing">
        </SwingAppender>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="log"/>
            <AppenderRef ref="error" level="error"/>
            <AppenderRef ref="swing"/>
        </Root>
    </Loggers>
</Configuration>