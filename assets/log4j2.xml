<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="log" fileName="logs/all.html" append="false">    
      <HTMLLayout/>
    </File> 
    <File name="error" fileName="logs/error.html" append="false">    
      <HTMLLayout/>
    </File>
    <!--Append logs-->
    <File name="logCum" fileName="logs/system.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
    </File>
    <File name="errorCum" fileName="logs/error.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
    </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="log"/>
            <AppenderRef ref="error" level="error"/>
            <AppenderRef ref="logCum"/>
            <AppenderRef ref="errorCum" level="error"/>
        </Root>
    </Loggers>
</Configuration>